@model IEnumerable<AuthNew.Models.Position>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

}

<h1 style ="color:Red">Position </h1>

<table class="table" style="color:Red">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th> <a asp-action="Create" class="btn btn-sm btn-success">
                <i class="fa-solid fa-plus"></i> New
            </a>    
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <form>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="Edit" asp-route-id="@item.PositionID" class="btn btn-warning">
                                <i class="fa-solid fa-pen-to-square">
                                </i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.PositionID" class=" btn btn-info">
                                <i class="fa-solid fa-info"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.PositionID " class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </div>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
